{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "digest": {
    "enabled": false
  },
  "extends": [
    "config:recommended"
  ],
  "ignoreUnstable": true,
  "packageRules": [
    {
      "automerge": false,
      "description": "GitHub Actions - Version updates only for stable releases",
      "matchDepTypes": [
        "action"
      ]
    }
  ],
  "respectLatest": true,
  "separateMajorMinor": false,
  "separateMinorPatch": false
}
